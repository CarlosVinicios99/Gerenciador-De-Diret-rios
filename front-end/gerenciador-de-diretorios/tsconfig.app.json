{
  "extends": "./tsconfig.json",   
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES2023"],     
    "jsx": "react-jsx",            
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true              
  },
  "include": ["src/**/*"],      
  "exclude": ["node_modules", "vite.config.ts"]
}
